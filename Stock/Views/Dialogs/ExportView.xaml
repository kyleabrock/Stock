<Window x:Class="Stock.UI.Views.Dialogs.ExportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Экспорт основного средства" Height="400" Width="400"
        WindowStyle="ToolWindow" ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Margin="8,0" Text="Выберите шаблон" Style="{StaticResource DialogTextBlockStyle}" />
        
        <ListView Grid.Row="1" ItemsSource="{Binding Path=Items}" SelectedItem="{Binding Path=SelectedItem}" />
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Command="{Binding Path=OkCommand}" Margin="0,0,8,0" Width="100" Height="32" Style="{StaticResource OkButtonNormalStyle}" />
            <Button Command="{Binding Path=CancelCommand}" Margin="0,0,8,0" Width="100" Height="32" Style="{StaticResource CancelButtonNormalStyle}" />
        </StackPanel>
        
    </Grid>
</Window>
