<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tk="http://schemas.microsoft.com/wpf/2008/toolkit"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
	xmlns:domain="clr-namespace:Stock.Core.Domain;assembly=Stock.Core"
	xmlns:dialogs="clr-namespace:Stock.UI.ViewModels.Dialogs"
	xmlns:utils="clr-namespace:Stock.UI.Utils"
	xmlns:lc="clr-namespace:Stock.UI"
	mc:Ignorable="d"
	x:Class="Stock.UI.Views.Dialogs.StockUnitAddView"
	x:Name="Window"
	Title="Основное средство"
    Width="800" Height="600"
    MinWidth="640" MinHeight="480"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
    Icon="../../Themes/MainIcon.ico">
    <Window.DataContext>
        <dialogs:StockUnitViewModel x:Name="ViewModel" />
    </Window.DataContext>
    <Window.Resources>
        <utils:StatusTypesToColorConverter x:Key="ColorConverter" />
    </Window.Resources>

    <Grid Margin="4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition />
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <!-- Title -->

        <!-- Main form -->
        <TextBlock Grid.Column="0" Style="{StaticResource DialogTextBlockStyle}" Margin="4" VerticalAlignment="Center" d:LayoutOverrides="GridBox">
            <Run Language="en-US" Text="ID" />
        </TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource DialogTextBlockStyle}" Margin="4" VerticalAlignment="Center" d:LayoutOverrides="GridBox">
            <Run Language="ru-RU" Text="Инв. №"/>
        </TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource DialogTextBlockStyle}" Margin="4" VerticalAlignment="Center" d:LayoutOverrides="GridBox">
            <Run Language="ru-RU" Text="Название"/>
        </TextBlock>
        <TextBlock Grid.Column="2" Style="{StaticResource DialogTextBlockStyle}" Margin="4" VerticalAlignment="Center" d:LayoutOverrides="GridBox">
            <Run Language="ru-RU" Text="Статус"/>
        </TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource DialogTextBlockStyle}" Margin="4" VerticalAlignment="Center" d:LayoutOverrides="GridBox">
            <Run Language="ru-RU" Text="Ввод в экспл."/>
        </TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="2" Style="{StaticResource DialogTextBlockStyle}" Margin="4" VerticalAlignment="Center" d:LayoutOverrides="GridBox">
            <Run Language="ru-RU" Text="МОЛ"/>
        </TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="2" Style="{StaticResource DialogTextBlockStyle}" Margin="4" VerticalAlignment="Center" d:LayoutOverrides="GridBox">
            <Run Language="ru-RU" Text="Комментарии"/>
        </TextBlock>
        
        <TextBox Text="{Binding Path=StockUnit.Id}" Grid.Column="1" Margin="4" IsReadOnly="True" Style="{StaticResource TextBoxStyle}" VerticalAlignment="Center"/>
        <TextBox x:Name="StockNumberTb" Text="{Binding Path=StockUnit.StockNumber}" Grid.Row="1" Grid.Column="1" Margin="4" Style="{StaticResource TextBoxStyle}" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Path=StockUnit.StockName}" Grid.Row="2" Grid.Column="1" Grid.RowSpan="3" Margin="4" TextWrapping="Wrap" 
                 VerticalAlignment="Stretch" Style="{StaticResource TextBoxStyle}"
                 VerticalScrollBarVisibility="Auto"/>
        <ComboBox x:Name="StatusCb" ItemsSource="{Binding Path=StatusList}" SelectedItem="{Binding Path=StockUnit.Status}" Grid.Column="3"  Margin="4"
                  Style="{StaticResource ComboBoxStyle}" VerticalAlignment="Center">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" d:DataContext="{d:DesignInstance domain:Status}">
                        <Border Margin="2,0" Background="{Binding Path=StatusType, Converter={StaticResource ColorConverter}}" Width="8" />
                        <ContentPresenter Content="{Binding Path=StatusName}" HorizontalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <xctk:DateTimePicker x:Name="CreationDateDtPk" Value="{Binding Path=StockUnit.CreationDate}" Grid.Row="1" Grid.Column="3" 
                             TimePickerVisibility="Collapsed" Format="ShortDate" 
                             ShowButtonSpinner="False"
                             Margin="4" Style="{StaticResource DateTimePickerStyle}" VerticalAlignment="Center"/>
        <ComboBox x:Name="OwnerCb" SelectedItem="{Binding Path=StockUnit.Owner}" ItemsSource="{Binding Path=OwnerList}" Grid.Row="2" Grid.Column="3" 
                  DisplayMemberPath="Name.DisplayName"
                  Margin="4" Style="{StaticResource ComboBoxStyle}" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Path=StockUnit.Comments}" Grid.Row="3" Grid.Column="3" Margin="4" VerticalAlignment="Stretch"
                 Style="{StaticResource TextBoxStyle}" TextWrapping="Wrap" Grid.RowSpan="2"/>
        
        <!-- Datagrid -->
		<TabControl Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4" Margin="4" Style="{StaticResource TabControlDefaultStyle}">
			<TabItem Header="Состав" Style="{StaticResource TabItemDefaultStyle}">
				<Grid Margin="4,8">
            		<Grid.RowDefinitions>
                		<RowDefinition Height="32"/>
                		<RowDefinition />
            		</Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <Button Style="{StaticResource AddButtonNormalStyle}" Command="{Binding AddUnitCommand}" Margin="4,0" />
                        <Button Style="{StaticResource DeleteButtonSmallStyle}" Margin="4,0" Command="{Binding RemoveUnitCommand}" />
                        <Button Style="{StaticResource ReportButtonSmallStyle}" Margin="4,0" Command="{Binding ReportsCommand}" />
                    </StackPanel>

                    <tk:DataGrid Grid.Row="1" Style="{StaticResource DataGridDefaultStyle}" IsReadOnly="False" CanUserAddRows="True" Margin="4" PreviewKeyDown="MainDataGrid_PreviewKeyDown"
                                 ItemsSource="{Binding Path=UnitList}" SelectionMode="Single" SelectedItem="{Binding SelectedItem}"
                                 CanUserDeleteRows="False" KeyboardNavigation.TabNavigation="Cycle">
                        <tk:DataGrid.Columns>
                            <tk:DataGridComboBoxColumn Header="Тип" Width="140" 
                                                       SelectedValuePath="TypeName" DisplayMemberPath="TypeName"
                                                       SelectedItemBinding="{Binding UnitType}" >
                                <tk:DataGridComboBoxColumn.ElementStyle>
                                    <Style TargetType="{x:Type ComboBox}">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.UnitTypes, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
                                    </Style>
                                </tk:DataGridComboBoxColumn.ElementStyle>
                                <tk:DataGridComboBoxColumn.EditingElementStyle>
                                    <Style TargetType="{x:Type ComboBox}">
                                        <Setter Property="ItemsSource" Value="{Binding Path=DataContext.UnitTypes, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" />
                                    </Style>
                                </tk:DataGridComboBoxColumn.EditingElementStyle>
                            </tk:DataGridComboBoxColumn>
                            <tk:DataGridTemplateColumn Header="Производитель" Width="140" >
                                <tk:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Manufacture}" />
                                    </DataTemplate>
                                </tk:DataGridTemplateColumn.CellTemplate>
                                <tk:DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <lc:AutoCompleteFocusableBox x:Name="ManufactureAcBox"  ItemsSource="{Binding Path=DataContext.ManufactureList, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" 
                                                                Text="{Binding Manufacture, Mode=TwoWay}" FilterMode="Contains" lc:FocusAttacher.Focus="True"/>
                                    </DataTemplate>
                                </tk:DataGridTemplateColumn.CellEditingTemplate>
                            </tk:DataGridTemplateColumn>
                            <tk:DataGridTemplateColumn Header="Модель" Width="140">
                                <tk:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ModelName}" />
                                    </DataTemplate>
                                </tk:DataGridTemplateColumn.CellTemplate>
                                <tk:DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <lc:AutoCompleteFocusableBox x:Name="ModelAcBox" 
                                                                ItemsSource="{Binding Path=DataContext.ModelList, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" 
                                                                Text="{Binding ModelName, Mode=TwoWay}" FilterMode="Contains" lc:FocusAttacher.Focus="True"/>
                                    </DataTemplate>
                                </tk:DataGridTemplateColumn.CellEditingTemplate>
                            </tk:DataGridTemplateColumn>
                            <tk:DataGridTextColumn Header="Сер. №" Width="150" Binding="{Binding Serial}" />
                            <tk:DataGridTextColumn Header="Комментарии" Width="150" Binding="{Binding Comments}" />
                        </tk:DataGrid.Columns>
                    </tk:DataGrid>
                </Grid>
			</TabItem>
            <TabItem Header="Отметки" Style="{StaticResource TabItemDefaultStyle}">
                <Grid Margin="4,8">
                    <tk:DataGrid Style="{StaticResource DataGridDefaultStyle}"
                                 ItemsSource="{Binding Path=StockUnitNoteList}">
                        <tk:DataGrid.Columns>
                            <tk:DataGridTextColumn Header="Заголовок" Width="150" Binding="{Binding Path=Title}" />
                            <tk:DataGridTextColumn Header="Текст" Width="250" Binding="{Binding Path=Text}" />
                            <tk:DataGridTextColumn Header="Комментарии" Width="200" Binding="{Binding Path=Comments}" >
                                <tk:DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </tk:DataGridTextColumn.ElementStyle>
                            </tk:DataGridTextColumn>
                        </tk:DataGrid.Columns>
                    </tk:DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Документы" Style="{StaticResource TabItemDefaultStyle}">
                <Grid Margin="4,8">
                    <tk:DataGrid Style="{StaticResource DataGridDefaultStyle}" IsReadOnly="True" 
                                 ItemsSource="{Binding Path=DocumnetsList}">
                        <tk:DataGrid.Columns>
                            <tk:DataGridTextColumn Header="Документ" Width="250" Binding="{Binding Path=DocumentType.TypeName}" >
                                <tk:DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </tk:DataGridTextColumn.ElementStyle>
                            </tk:DataGridTextColumn>
                            <tk:DataGridTextColumn Header="Номер" Width="150" Binding="{Binding Path=DocumentNumber.FullNumber}" />
                            <tk:DataGridTextColumn Header="МОЛ" Width="150" Binding="{Binding Path=Owner.Name.DisplayName}" />
                            <tk:DataGridTextColumn Header="Комментарии" Width="200" Binding="{Binding Path=Comments}" >
                                <tk:DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </tk:DataGridTextColumn.ElementStyle>
                            </tk:DataGridTextColumn>
                        </tk:DataGrid.Columns>
                    </tk:DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Ремонт" Style="{StaticResource TabItemDefaultStyle}">
                <Grid Margin="4,8">
                    <tk:DataGrid Style="{StaticResource DataGridDefaultStyle}" IsReadOnly="True" 
                                 ItemsSource="{Binding Path=RepairList}">
                        <tk:DataGrid.Columns>
                            <tk:DataGridTextColumn Header="Дата" Width="85" Binding="{Binding Path=StartedDate, StringFormat=\{0:dd.MM.yyyy\}}" />
                            <tk:DataGridTextColumn Header="Устройство" Width="100" Binding="{Binding Path=Unit.FullModelName}">
                                <tk:DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                    </Style>
                                </tk:DataGridTextColumn.ElementStyle>
                            </tk:DataGridTextColumn>
                            <tk:DataGridTextColumn Header="Неисправность" Width="150" Binding="{Binding Path=Defect}" />
                            <tk:DataGridTextColumn Header="Исполнитель" Width="150" Binding="{Binding Path=User.Name.DisplayName}" />
                            <tk:DataGridTextColumn Header="Комментарии" Width="200" Binding="{Binding Path=Comments}" >
                                <tk:DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </tk:DataGridTextColumn.ElementStyle>
                            </tk:DataGridTextColumn>
                        </tk:DataGrid.Columns>
                    </tk:DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Файлы" Style="{StaticResource TabItemDefaultStyle}">
                <Grid></Grid>
            </TabItem>
        </TabControl>
        

        <!-- Dialog buttons -->
        <StackPanel Grid.Column="3" Grid.Row="6" Height="32" Margin="0" 
                    Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Content="Сохранить" IsDefault="True" Style="{StaticResource ButtonDefaultStyle}" 
                    Command="{Binding SaveCommand}" Margin="4,0" Width="100"/>
            <Button Content="Отмена" IsCancel="True" Style="{StaticResource ButtonDefaultStyle}" 
                    Command="{Binding CloseCommand}" Margin="4,0" Width="100"/>
        </StackPanel>

    </Grid>
</Window>