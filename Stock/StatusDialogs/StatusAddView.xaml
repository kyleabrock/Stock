<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Stock.StatusDialogs"
    mc:Ignorable="d"
	x:Class="Stock.StatusDialogs.StatusAddView"
	x:Name="Window"
	Title="Новый статус"
	Width="480" Height="480" ResizeMode="NoResize" 
    WindowStartupLocation="CenterOwner" ShowInTaskbar="False"
    Icon="../Themes/MainIcon.ico">
    <Window.DataContext>
        <local:StatusAddViewModel x:Name="ViewModel"/>
    </Window.DataContext>

    <Grid x:Name="LayoutRoot" Margin="4">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.65*"/>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="32"/>
			<RowDefinition Height="32"/>
			<RowDefinition Height="32"/>
			<RowDefinition Height="32"/>
			<RowDefinition Height="32"/>
			<RowDefinition Height="32"/>
			<RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
			<RowDefinition />
		</Grid.RowDefinitions>
        <!-- Title -->
		<TextBlock x:Name="TitleLb" Grid.RowSpan="2" Grid.ColumnSpan="2" Style="{StaticResource DialogTitleTextBlockStyle}">
            <Run Language="ru-RU" Text="Новое устройство"/>
        </TextBlock>
        <!-- Main form -->
		<TextBlock x:Name="IdLb" Grid.Row="2" Grid.Column="0" Style="{StaticResource DialogTextBlockStyle}">
            <Run Language="en-US" Text="ID" />
        </TextBlock>
        <TextBox x:Name="IdTb" Text="{Binding Status.Id}" Grid.Row="2" Grid.Column="1" IsReadOnly="True" Style="{StaticResource DialogTextBoxStyle}" />
        
        <TextBlock x:Name="StatusTypeLb" Grid.Row="3" Grid.Column="0" Style="{StaticResource DialogTextBlockStyle}">
            <Run Language="ru-RU" Text="Группа" />
        </TextBlock>
        <ComboBox x:Name="StatusTypeCb" SelectedIndex="{Binding StatusType}" Grid.Row="3" Grid.Column="1"
                  Margin="4" FontSize="13.333"
                  VerticalAlignment="Center">
            <ComboBoxItem Content="Новый" />
            <ComboBoxItem Content="В работе" />
            <ComboBoxItem Content="Отложено" />
            <ComboBoxItem Content="Завершен" />
        </ComboBox>
        
        <TextBlock x:Name="StatusNameLb" Grid.Row="4" Grid.Column="0" Style="{StaticResource DialogTextBlockStyle}">
            <Run Language="ru-RU" Text="Название"/>
        </TextBlock>
        <TextBox x:Name="StatusNameTb" Text="{Binding Status.StatusName}" Grid.Row="4" Grid.Column="1" Style="{StaticResource DialogTextBoxStyle}"/>
        
        <TextBlock x:Name="CommentsLb" Grid.Row="5" Grid.Column="0" Style="{StaticResource DialogTextBlockStyle}">
            <Run Language="ru-RU" Text="Комментарии"/>
        </TextBlock>
        <TextBox x:Name="CommentsTb" Text="{Binding Status.Comments}" Grid.Row="5" Grid.Column="1" Grid.RowSpan="3" Style="{StaticResource DialogTextBoxStyle}"
                 VerticalAlignment="Stretch" TextWrapping="Wrap" />
        
        <!-- Dialog buttons -->
        <StackPanel Grid.Row="8" Grid.Column="1" Height="32" Margin="0,4" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
			<Button x:Name="OkBtn" Content="Сохранить" IsDefault="True" Margin="4,0" Width="100"
                    HorizontalAlignment="Right" Style="{StaticResource ButtonDefaultStyle}" Command="{Binding SaveCommand}"/>
            <Button x:Name="CancelBtn" Content="Отмена" IsCancel="True" Margin="4,0" Width="100"
                    HorizontalAlignment="Right" Style="{StaticResource ButtonDefaultStyle}" Command="{Binding CloseCommand}"/>
		</StackPanel>
	</Grid>
</Window>